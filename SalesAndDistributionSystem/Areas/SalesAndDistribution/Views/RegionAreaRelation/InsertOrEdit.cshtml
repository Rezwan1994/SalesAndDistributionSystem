@model SalesAndDistributionSystem.Domain.Models.Entities.SalesAndDistribution.Region_Area_Mst
@{
    ViewData["Title"] = "Region Area Relation";
}
<link href="/css/site.css" rel="stylesheet">
<link href="/Design/vendor/select2/dist/css/select2.min.css" rel="stylesheet" type="text/css">


<div class="container-fluid" id="container-wrapper" ng-app="ngApp" ng-controller="ngGridCtrl" style="overflow: auto !important;max-height:60% !important;"  >
<div class="d-sm-flex align-items-center justify-content-between mb-4 sm-breadcrumb" >
            <h4 class="h3 mb-0 text-gray-600">
                @ViewData["Title"].ToString()
            </h4>
            <ol class="breadcrumb">
                     <li class="breadcrumb-item"><a class="btn  btn-primary mb-1"  href="/SalesAndDistribution/RegionAreaRelation/List">Search</a></li>

                     <li class="breadcrumb-item"><button class="btn  btn-danger mb-1"  ng-click="ClearForm()">Reset</button></li>
              <li class="breadcrumb-item"><button  type="button" style="width: 100px;color:white;cursor:pointer" pe="button"  ng-disabled="formMenuCategoryAdd.$invalid"  name="btnSubmit"  class="btn  btn-success mb-1" ng-click="SaveData(model)">Save</button></li>


          </ol>
   </div>
  

       <div class="card mb-4">
              
            <div class="card-body">



                  <form name="formMenuCategoryAdd">
                        <span ng-init="GetEditDataById('@Model.REGION_AREA_MST_ID_ENCRYPTED')"></span>

                      <fieldset>
                           <legend style="width:220px">Region Area Relation</legend>

                      <div class="row" style="margin:20px">
                          <div class="col-md-6 space-bottom">
                              <div class="row">
                                <div class="col-md-4">
                                  <label for="COMPANY_ID">Company</label>
                                 </div>
                              <div class="col-md-8">
                                  <select  class="select2-single form-control" id="COMPANY_ID" ng-disabled = "getPermissions.useR_TYPE != 'SuperAdmin'" 
                                      name="COMPANY_ID" ng-model="model.COMPANY_ID" style="width:100%">

                                      <option ng-repeat="item in Companies" ng-selected="item.COMPANY_ID == model.COMPANY_ID" value="{{item.COMPANY_ID}}">{{item.COMPANY_NAME}}</option>
                                     </select>
                              </div>
                              </div>
                            
                          </div>
                           <div class="col-md-6 space-bottom" >
                               <div class="row">
                                <div class="col-md-4">
                                   <label for="REGION_AREA_MST_STATUS">Status</label>
                                 </div>
                              <div class="col-md-8">
                                  <select  class="form-control" id="REGION_AREA_MST_STATUS"
                                      name="REGION_AREA_MST_STATUS" ng-model="model.REGION_AREA_MST_STATUS" style="width:100%">

                                      <option ng-repeat="item in Status" value="{{item.STATUS}}" ng-selected="item.STATUS == model.REGION_AREA_MST_STATUS" >{{item.STATUS}}</option>
                                     </select>
                              </div>
                              </div>
                            
                          </div>
                            <div class="col-md-6 space-bottom">
                              <div class="row">
                                <div class="col-md-4">
                                  <label for="REGION_NAME">Region Name </label>
                                 </div>
                                <div class="col-md-8">
                                          <select  class="select2-single-Region form-control" id="REGION_CODE" 
                                      name="REGION_CODE" ng-model="model.REGION_CODE" style="width:100%" >

                                      <option ng-repeat="item in Regions" ng-selected="item.REGION_CODE == model.REGION_CODE" value="{{item.REGION_CODE}}">{{item.REGION_NAME}} -- {{item.REGION_CODE}} </option>
                                     </select>
              
                              </div>
                              </div>
                            
                          </div>
                            <div class="col-md-6 space-bottom" >
                               <div class="row">
                                <div class="col-md-4">
                                   <label for="REGION_CODE">Code</label>
                                 </div>
                              <div class="col-md-8">
                                    <input id="REGION_CODE" ng-disabled="true" type="text" class="form-control"  required 
                                      name="REGION_CODE"  ng-model="model.REGION_CODE" >
                                        
                              </div>
                              </div>
                            
                          </div>
                            <div class="col-md-6 space-bottom">
                              <div class="row">
                                <div class="col-md-4">
                                  <label for="EFFECT_START_DATE">Start Date</label>
                                 </div>
                              <div class="col-md-8 simple-date2">
                                   <div class="input-group date">
                                  <div class="input-group-prepend">
                                       <span class="input-group-text"><i class="fas fa-calendar"></i></span>
                                  </div>
                                    <input type="text" class="form-control" ng-model="model.EFFECT_START_DATE" ng-change="CheckENDDateValidation(model) || CheckDateValidation(model)"   value="" id="oneYearView">
                                 </div>
                              </div>
                              </div>
                            
                          </div>
                            <div class="col-md-6 space-bottom">
                              <div class="row">
                                <div class="col-md-4">
                                  <label for="EFFECT_END_DATE">End Date</label>
                                 </div>
                                  <div class="col-md-8 simple-date2">
                                   <div class="input-group date">
                                  <div class="input-group-prepend">
                                       <span class="input-group-text"><i class="fas fa-calendar"></i></span>
                                  </div>
                                    <input type="text" ng-change="CheckENDDateValidation(model) || CheckDateValidation(model)"  class="form-control" ng-model="model.EFFECT_END_DATE"  value="" id="EFFECT_END_DATE">
                                 </div>
                              </div>
                            
                              </div>
                            
                          </div>
                           <div class="col-md-12 space-bottom">
                              <div class="row">
                                <div class="col-md-2">
                                  <label for="REMARKS">Remarks</label>
                                 </div>
                              <div class="col-md-10">
                                   <input id="REMARKS" type="text" class="form-control"  
                                      name="REMARKS"  ng-model="model.REMARKS"  >
                                         
                              </div>
                              </div>
                            
                          </div>
                      </div>
                       <div class="row" style="height: 57vh;">
                         <div class="col-lg-12 mb-4">
                              <div class="card" style="margin: 10px">
                                   <div ui-grid="gridOptions" ui-grid-exporter ui-grid-auto-fit-columns ui-grid-resize-columns ui-grid-auto-resize
                                     style="font-family: 'Open Sans', Arial, sans-serif; color: #252222 !important; height: 50vh;" class="grid">
                        </div>    
                 </div>
            </div>
          </div>
                    </fieldset>
                  </form>
              
                     
             </div>

   
                
     </div>
     

                  
        <partial name="~/Views/Shared/_Loader.cshtml" ng-show="showloader" ></partial>

            
        
           <script src="~/ScriptsNg/SalesAndDistribution/RegionAreaRelation/Controller/InsertOrEditCtr.js"></script>
          <script src="~/ScriptsNg/SalesAndDistribution/RegionAreaRelation/Service/InsertOrEditServices.js"></script>
          <script src="~/ScriptsNg/SalesAndDistribution/Region/Service/RegionInfoServices.js"></script>
          <script src="~/ScriptsNg/SalesAndDistribution/Area/Service/AreaInfoServices.js"></script>

          <script src="~/ScriptsNg/Services/permissionProvider.js"></script>

          <script src="~/ScriptsNg/Services/gridRegistrationService.js"></script>
            <script src="~/Design/vendor/select2/dist/js/select2.min.js"></script>



          <script type="text/javascript">
    $(document).ready(function () {
        $("#AREA_CODE").select2({
        placeholder: "Select",
    
    });
    
       
 });


</script>


</div>
