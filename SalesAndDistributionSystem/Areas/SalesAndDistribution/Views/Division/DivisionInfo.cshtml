@{
    ViewData["Title"] = "Division Info";
}
<link href="/css/site.css" rel="stylesheet">
<link href="/Design/vendor/select2/dist/css/select2.min.css" rel="stylesheet" type="text/css">


<div class="container-fluid" id="container-wrapper" ng-app="ngApp" ng-controller="ngGridCtrl" style="overflow: auto !important;max-height:60% !important;"  >
<div class="d-sm-flex align-items-center justify-content-between mb-4 sm-breadcrumb" >
            <h4 class="h3 mb-0 text-gray-600">
                @ViewData["Title"].ToString()
            </h4>
            <ol class="breadcrumb">
                     <li class="breadcrumb-item"><button class="btn  btn-danger mb-1"  ng-click="ClearForm()">Reset</button></li>
              <li class="breadcrumb-item"><button  type="button" style="width: 100px;color:white;cursor:pointer" pe="button"  ng-disabled="formMenuCategoryAdd.$invalid"  name="btnSubmit"  class="btn  btn-success mb-1" ng-click="SaveData(model)">Save</button></li>


          </ol>
   </div>
  

       <div class="card mb-4">
              
            <div class="card-body">



                  <form name="formMenuCategoryAdd">
                      <fieldset>
                           <legend style="width:140px">Division Entry</legend>

                      <div class="row" style="margin:20px">

                          <div class="col-md-6 space-bottom">
                              <div class="row">
                                <div class="col-md-4">
                                  <label for="COMPANY_ID">Company</label>
                                 </div>
                              <div class="col-md-8">
                                  <select  class="select2-single form-control" id="COMPANY_ID" ng-disabled="model.USER_TYPE != 'SuperAdmin'"
                                      name="COMPANY_ID" ng-model="model.COMPANY_ID" style="width:100%">

                                      <option ng-repeat="item in Companies" ng-selected="item.COMPANY_ID == model.COMPANY_ID" value="{{item.COMPANY_ID}}">{{item.COMPANY_NAME}}</option>
                                     </select>
                              </div>
                              </div>
                            
                          </div>
                          <div class="col-md-6 space-bottom" >
                               <div class="row">
                                <div class="col-md-4">
                                   <label for="DIVISION_STATUS">Status</label>
                                 </div>
                              <div class="col-md-8">
                                  <select  class="select2-single form-control" id="DIVISION_STATUS"
                                      name="DIVISION_STATUS" ng-model="model.DIVISION_STATUS" style="width:100%">

                                      <option ng-repeat="item in Status" value="{{item.DIVISION_STATUS}}" ng-selected="item.DIVISION_STATUS == model.DIVISION_STATUS" >{{item.DIVISION_STATUS}}</option>
                                     </select>
                              </div>
                              </div>
                            
                          </div>

                            <div class="col-md-6 space-bottom">
                              <div class="row">
                                <div class="col-md-4">
                                  <label for="DIVISION_NAME">Name</label>
                                 </div>
                              <div class="col-md-8">
                                   <input id="DIVISION_NAME" type="text" class="form-control"  required 
                                      name="DIVISION_NAME"  ng-model="model.DIVISION_NAME"  >
                                         
                              </div>
                              </div>
                            
                          </div>
                           <div class="col-md-6 space-bottom">
                              <div class="row">
                                <div class="col-md-4">
                                  <label for="DIVISION_CODE">Division Code</label>
                                 </div>
                              <div class="col-md-8">
                                   <input id="DIVISION_CODE" type="text" class="form-control"  required
                                      name="DIVISION_CODE"  ng-model="model.DIVISION_CODE" >
                                         
                              </div>
                              </div>
                            
                          </div>
                            <div class="col-md-12 space-bottom">
                              <div class="row">
                                <div class="col-md-2">
                                  <label for="DIVISION_ADDRESS">Address</label>
                                 </div>
                              <div class="col-md-10">
                                   <input id="DIVISION_ADDRESS" type="text" class="form-control"  
                                      name="DIVISION_ADDRESS"  ng-model="model.DIVISION_ADDRESS"  >
                                         
                              </div>
                              </div>
                            
                          </div>
                           <div class="col-md-12 space-bottom">
                              <div class="row">
                                <div class="col-md-2">
                                  <label for="REMARKS">Remarks</label>
                                 </div>
                              <div class="col-md-10">
                                   <input id="REMARKS" type="text" class="form-control"   
                                      name="REMARKS"  ng-model="model.REMARKS"  >
                                         
                              </div>
                              </div>
                            
                          </div>
                      </div>
                    </fieldset>
                  </form>
              
                     
             </div>

   
                
     </div>
       <div class="card mb-4">
              
            <div class="card-body">

          <fieldset>
                     <legend style="width:140px">Division List</legend>
                      <div class="row" style="height: 57vh;">
                         <div class="col-lg-12 mb-4">
                              <div class="card" ng-show="model.LIST_VIEW == 'Active'" style="margin: 10px">
                                   <div ui-grid="gridOptionsList" ui-grid-exporter ui-grid-auto-fit-columns ui-grid-resize-columns ui-grid-auto-resize
                                     style="font-family: 'Open Sans', Arial, sans-serif; color: #252222 !important; height: 50vh;" class="grid">
                        </div>    
                 </div>
            </div>
          </div>
                </fieldset>

     </div>     
     </div>

                  
        <partial name="~/Views/Shared/_Loader.cshtml" ng-show="showloader" ></partial>

            
        
           <script src="~/ScriptsNg/SalesAndDistribution/Division/Controller/DivisionInfoCtr.js"></script>
          <script src="~/ScriptsNg/SalesAndDistribution/Division/Service/DivisionInfoServices.js"></script>
          <script src="~/ScriptsNg/Services/permissionProvider.js"></script>

          <script src="~/ScriptsNg/Services/gridRegistrationService.js"></script>
            <script src="~/Design/vendor/select2/dist/js/select2.min.js"></script>



          <script type="text/javascript">
    $(document).ready(function () {
        $(".select2-single").select2({
            placeholder: "Select...."
        });
       
 });
</script>


</div>
