                                      name="CUSTOMER_STATUS" ng-model="model.CUSTOMER_STATUS" style="width:100%">

                                      <option ng-repeat="item in Status" value="{{item.STATUS}}" ng-selected="item.STATUS == model.CUSTOMER_STATUS" >{{item.STATUS}}</option>
                                     </select>
                                </div>
                              </div>
                            
                          </div>
                           <div class="col-md-4 space-bottom">
                              <div class="row">
                                <div class="col-md-4">
                                  <label for="CUSTOMER_CODE">Customer Code</label>
                                 </div>
                              <div class="col-md-8">
                                   <input id="CUSTOMER_CODE" type="text" class="form-control"  
