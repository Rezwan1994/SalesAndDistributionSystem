@{
    ViewData["Title"] = "Company Page";
}





<div class="container-fluid" id="container-wrapper" ng-app="ngApp" ng-controller="ngGridCtrl" >
    
  <div class="d-sm-flex align-items-center justify-content-between mb-4 sm-breadcrumb" >
            <h4 class="h3 mb-0 text-gray-600">
                  <ol class="breadcrumb">
                           <li class="breadcrumb-item"><a class="btn btn-outline-primary mb-1" href="~/Company/">Sales List</a></li>
            
          </ol>
            </h4>
            <ol class="breadcrumb">
                     <li class="breadcrumb-item"><a class="btn btn-outline-danger mb-1" href="~/Company/">Cancel</a></li>
              <li class="breadcrumb-item"><a  style="width: 100px" id="#modalCenter" class="btn btn-outline-success mb-1" ng-click="ClearForm()">Save</a></li>
            
          </ol>
   </div>
  
              <!-- Form Basic -->
              <div class="card mb-4">
               @* <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                  <h6 class="m-0 font-weight-bold text-primary">Sales Order</h6>
                </div>*@
                <div class="card-body">
                  <form>
                       <div class="row">
                    <div class="form-group col-md-3">
                    <label for="Role_Id">Customer</label>
                    <div class="typeaheadcontainer">
                    <input type="text" autocomplete="off" style="width:100%;" class="form-control" name="ROLE_NAME"
                                                       ng-model="model.ROLE_NAME"
                                                       uib-typeahead="Role as Role.ROLE_NAME for Role in AutoCompleteDataLoadForRole($viewValue)| limitTo:5"
                                                       typeahead-append-to-body="true"
                                                       placeholder="Enter (Customer Name) minimum 3 character"
                                                       typeahead-editable="false"
                                                       typeahead-on-select="typeaheadSelectedRole(row.entity, $item)" />
                    </div>
                  </div>
                 <div class="form-group col-md-3">
                    <label for="Role_Id">Total Price</label>
                    <div class="typeaheadcontainer">
                    <input type="text" autocomplete="off" style="width:100%;" class="form-control" name="ROLE_NAME" ng-model="model.ROLE_NAME" placeholder="Enter Total Price"  />
                    </div>
                  </div>
                <div class="form-group col-md-3">
                    <label for="Role_Id">Discount</label>
                    <div class="typeaheadcontainer">
                    <input type="text" autocomplete="off" style="width:100%;" class="form-control" name="ROLE_NAME" ng-model="model.ROLE_NAME" placeholder="Enter Discount"  />
                    </div>
                  </div>
                  <div class="form-group col-md-3">
                    <label for="Role_Id">Address</label>
                    <div class="typeaheadcontainer">
                    <input type="text" autocomplete="off" style="width:100%;" class="form-control" name="ROLE_NAME" ng-model="model.ROLE_NAME" placeholder="Enter (Role Name) minimum 3 character"  />
                    </div>
                  </div>
                   </div>
           </form>
               
      </div>
   </div>
    
        <partial name="~/Views/Shared/_Loader.cshtml" ng-show="showloader" ></partial>

            
          <div class="row">
            <div class="col-lg-12 mb-4">
              <div class="card">
              
                            <div ui-grid="gridOptions" ui-grid-exporter ui-grid-auto-fit-columns ui-grid-resize-columns ui-grid-auto-resize
                                     style="font-family: 'Open Sans', Arial, sans-serif; color: #252222 !important; height: 40vh;" class="grid">
                        </div>
              </div>
            </div>
          </div>

        
      
          <script src="~/ScriptsNg/SalesAndDistribution/Sales/Controller/SalesCtr.js"></script>
          <script src="~/ScriptsNg/SalesAndDistribution/Sales/Service/SalesService.js"></script>
         <script src="~/ScriptsNg/Services/permissionProvider.js"></script>

          <script src="~/ScriptsNg/Services/gridRegistrationService.js"></script>


          <script type="text/javascript">
    $(document).ready(function () {
        $(".select2-single").select2({
            placeholder: "Select...."
        });
        
 });
</script>
</div>

        
