<div class="row justify-content-center">
      <div class="col-xl-6 col-lg-12 col-md-9">
        <div class="card shadow-sm my-5">
          <div class="card-body p-0">
            <div class="row">
              <div class="col-lg-12">
                <div class="login-form">
                  <div class="text-center">
                    <h1 class="h4 text-gray-900 mb-4">Change Password</h1>
                  </div>
                  <form class="user" method="post">
                    <div class="form-group">
                      <input type="password" class="form-control" required id="exampleInputPassword" name="Password" placeholder="New Password">
                    </div>
                    <div class="form-group">
                      <input type="password" class="form-control" required id="exampleInputPassword" name="PasswordCopy" placeholder="Re-Enter New Password">
                    </div>
                    @if(ViewData["ErrMsg"]!=null)
                    {
                         <div class="form-group" style="text-align:center" >
                          <h3 style="color:red">@ViewData["ErrMsg"].ToString()</h3>
                        </div>
                    }
                   
                    <div class="form-group">
                      <div class="row" style="margin-left: 10px">
                          <div class="custom-control custom-checkbox col-md-6" style="line-height: 1.5rem;">
                        <input type="checkbox" style="" value="true" class="custom-control-input" id="remember_me" name="RemeberMe">
                        <label class="custom-control-label" for="remember_me">Remember
                          Me</label>
                      </div>
                      <div class="custom-control custom-checkbox col-md-6" style="line-height: 1.5rem;">
                        <input type="checkbox" class="custom-control-input" name="MailCredential" value="true" id="customCheck">
                        <label class="custom-control-label" for="customCheck">Send Credential by Mail</label>
                      </div>
                      </div>
                    </div>
                    <div class="form-group">
                      <button type="submit" class="btn btn-primary btn-block">Confirm</button>
                    </div>
                    <hr>
                   
                  </form>
                  <hr>

                  <div class="text-center">
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>