@{
    ViewData["Title"] = "Role User Configuration";
}
<link href="/css/site.css" rel="stylesheet">
<link href="/Design/vendor/select2/dist/css/select2.min.css" rel="stylesheet" type="text/css">



<div class="container-fluid" id="container-wrapper" ng-app="ngApp" ng-controller="ngGridCtrl" style="overflow: auto !important;max-height:60% !important;"  >


          <div class="card mb-4">
              
            <div class="card-body">
                <fieldset>
                     <legend style="width:140px">User Config</legend>
               <div class="row" style="margin:20px">

             
                   
                  <div class="form-group col-md-6">
                    <label for="Role_Id">Select User</label>
                    <div class="typeaheadcontainer">
                    <input type="text" autocomplete="off" style="width:100%;" class="form-control" name="USER_NAME"
                                                       ng-model="model.USER_NAME"
                                                       uib-typeahead="User as User.USER_NAME for User in AutoCompleteDataLoadForUser($viewValue)| limitTo:5"
                                                       typeahead-append-to-body="true"
                                                       placeholder="Enter (User Name) minimum 3 character"
                                                       typeahead-editable="false"
                                                       typeahead-on-select="typeaheadSelectedUser(row.entity, $item)" />
                    </div>
                  
                  </div>
                 
                  <div class="form-group col-md-6">
                     <div class="row" style="margin-top:5px">
                          <div class="col-md-6">
                                              <label for="select2Multiple"></label>
                    <button type="button" class="form-control btn btn-secondary"  ng-show="model.LIST_VIEW == 'Active'"  style="margin-top:5px" pe="button" name="btnSubmit" ng-click="UserMenuConfigSelectionList()"> Load</button>
                  
                      </div>
                      <div class="col-md-6">
                                              <label for="select2Multiple"></label>
                    <button type="button" class="form-control btn btn-success"  ng-show="model.ADD_PERMISSION == 'Active'"  style="margin-top:5px" pe="button" name="btnSubmit" ng-disabled="model.USER_ID == null || model.USER_ID < 1" ng-click="SaveData(model)"> Submit</button>
                  
                      </div>
                     </div>

                  </div>
                
              </div>
              </fieldset>
            </div>
        </div>
        <partial name="~/Views/Shared/_Loader.cshtml" ng-show="showloader" ></partial>

            <div class="card mb-4">
                <div class="card-body">
                   <fieldset>
                     <legend style="width:180px">Role Permission</legend>
                     <div class="row"  style="margin:20px">
            <div class="col-lg-12 mb-4">
              <div class="card"  ng-show="model.LIST_VIEW == 'Active'" >
              
                            <div ui-grid="gridOptionsList" ui-grid-exporter ui-grid-auto-fit-columns ui-grid-resize-columns ui-grid-auto-resize
                                     style="font-family: 'Open Sans', Arial, sans-serif; color: #252222 !important; height: 40vh;" class="grid">
                        </div>
              </div>
            </div>
          </div>
                  </fieldset>

                </div>
            </div>
          

        
          <script src="~/ScriptsNg/Security/Role/Controller/UserRoleConfigCtr.js"></script>
           <script src="~/ScriptsNg/Security/MenuPermission/Service/UserMenuConfigService.js"></script>
           <script src="~/ScriptsNg/Services/permissionProvider.js"></script>

          <script src="~/ScriptsNg/Security/Role/Service/RolesServices.js"></script>
          <script src="~/ScriptsNg/Services/gridRegistrationService.js"></script>
                    <script src="~/Design/vendor/select2/dist/js/select2.min.js"></script>

</div>
