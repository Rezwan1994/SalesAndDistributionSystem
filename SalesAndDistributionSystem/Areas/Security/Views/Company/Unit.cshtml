@{
    ViewData["Title"] = "Unit Page";
}
<link href="/css/site.css" rel="stylesheet">
<link href="/Design/vendor/select2/dist/css/select2.min.css" rel="stylesheet" type="text/css">



<div class="container-fluid" id="container-wrapper"  ng-app="ngApp" ng-controller="ngGridCtrl" style="overflow: auto !important;max-height:60% !important;"  >

  <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h4 class="h3 mb-0 text-gray-600">Unit</h4>
            <ol class="breadcrumb">
              <li class="breadcrumb-item"><a class="btn btn-outline-primary mb-1" href="~/Company/Unit">Unit List</a></li>
              <li class="breadcrumb-item"><a  id="#modalCenter" class="btn btn-outline-primary mb-1" data-toggle="modal" data-target="#exampleModalCenter" ng-click="SaveData(model)" ng-show="model.ADD_PERMISSION == 'Active'">Save</a></li>
             </ol>
   </div>

    <div class="card mb-4">
              
            <div class="card-body">


                      <fieldset>
                           <legend style="width:140px">Unit Entry</legend>

                      <form name="formUnitAdd">
                      <div class="row" style="margin:20px">
                           <div class="col-md-6" >
                                 <div class="form-group">
                                     <label> Company</label>
                                 <select  class="select2-single form-control" id="COMPANY_ID" required  ng-disabled="model.USER_TYPE != 'SuperAdmin'"
                                      name="COMPANY_ID" ng-model="model.COMPANY_ID" style="width:100%">

                                      <option ng-repeat="item in CompanyData" ng-selected="item.COMPANY_ID == model.COMPANY_ID" value="{{item.COMPANY_ID}}">{{item.COMPANY_NAME}}</option>
                                     </select>
                                     
                                         
                    
                    </div>
                          </div>
                          <div class="col-md-6" >
                               <div class="form-group">
                      <label for="UNIT_NAME">Unit Name</label>
                      <input type="text" class="form-control" autocomplete="off" required data-val="true"
                      name="UNIT_NAME" ng-model="model.UNIT_NAME"  placeholder="Enter Unit Name">
                    </div>
                          </div>
                           <div class="col-md-6" >
                                 <div class="form-group">
                                     <label for="UNIT_SHORT_NAME"> Short Name</label>
                                    <input id="UNIT_SHORT_NAME" type="text" class="form-control"  required
                                      name="UNIT_SHORT_NAME" ng-model="model.UNIT_SHORT_NAME"  placeholder="Enter Unit Short Name">
                                         
                    
                    </div>
                          </div>
                               <div class="col-md-6" >
                                 <div class="form-group">
                                     <label> Unit Type</label>
                                 <select  class="select2-single form-control" id="UNIT_TYPE" required
                                      name="UNIT_TYPE" ng-model="model.UNIT_TYPE" style="width:100%">

                                      <option ng-repeat="item in UnitData" value="{{item.UNIT_TYPE}}">{{item.UNIT_TYPE}}</option>
                                     </select>
                                     
                                         
                    
                    </div>
                          </div>
                           <div class="col-md-6" >
                                 <div class="form-group">
                                     <label for="UNIT_ADDRESS1">Unit Address 1 </label>
                                    <input id="UNIT_ADDRESS1" type="text" class="form-control" required
                                      name="UNIT_ADDRESS1" ng-model="model.UNIT_ADDRESS1"  placeholder="Enter Unit Address 1">
                                         
                    
                    </div>
                          </div>
                           <div class="col-md-6" >
                                 <div class="form-group">
                                     <label for="UNIT_ADDRESS2">Menu Action</label>
                                    <input id="UNIT_ADDRESS2" type="text" class="form-control" required
                                      name="UNIT_ADDRESS2" ng-model="model.UNIT_ADDRESS2"  placeholder="Enter Unit Address 2">
                                         
                    
                    </div>
                          </div>
                    
                  
                      </div>
                   
                  </form>
                    </fieldset>
              
                     
             </div>

   
                
     </div>
       <div class="card mb-4">
              
            <div class="card-body">

          <fieldset>
                     <legend style="width:140px">Unit List</legend>
                      <div class="row" style="height: 57vh;">
                         <div class="col-lg-12 mb-4">
                              <div class="card" ng-show="model.LIST_VIEW == 'Active'" style="margin: 10px">
                                   <div ui-grid="gridOptionsList" ui-grid-exporter ui-grid-auto-fit-columns ui-grid-resize-columns ui-grid-auto-resize
                                     style="font-family: 'Open Sans', Arial, sans-serif; color: #252222 !important; height: 50vh;" class="grid">
                        </div>    
                 </div>
            </div>
          </div>
                </fieldset>

     </div>     
     </div>
         
        
        <partial name="~/Views/Shared/_Loader.cshtml" ng-show="showloader" ></partial>


        
          <script src="~/ScriptsNg/Security/Company/Controller/UnitCtr.js"></script>
          <script src="~/ScriptsNg/Security/Company/Service/CompanyService.js"></script>
         <script src="~/ScriptsNg/Services/permissionProvider.js"></script>

          <script src="~/ScriptsNg/Services/gridRegistrationService.js"></script>
         <script src="~/Design/vendor/select2/dist/js/select2.min.js"></script>

           <script type="text/javascript">
    $(document).ready(function () {
        $(".select2-single").select2({
            placeholder: "Select...."
        });
        
 });
 </script>
</div>
